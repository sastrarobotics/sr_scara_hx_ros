<!-- Joints -->

<joint name="joint1" type="revolute">
  <axis xyz="0 0 1" /> 
  <limit effort="3.0" velocity="0.01" lower="-2.617" upper="2.617"/>
  <origin xyz="0 0 0.097" rpy="0 0 0" />
  <parent link="base_link" />
  <child link="link1" />
</joint>

<joint name="joint2" type="revolute">
